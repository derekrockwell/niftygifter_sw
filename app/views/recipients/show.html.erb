
<div class="pagination-centered">
	<h3><%= @recipient.alias %>'s Wishlist</h3>
</div>
<hr/>

<% @recipient.scans.limit(10).each do |scan| %>
<% @scan = scan %>
<%= render 'layouts/scan-list' %>
<%end%>

<%= link_to "Purchase Items", @recipient.checkout_url, :method => "get", "data-role" => "button" %>

<%= render 'layouts/scan-links' %>

<%= link_to "Delete this list",@recipient, 
:confirm => "Are you sure you wish to delete this person's gift list?",
:method => :delete, 
"data-ajax" => "false",
:rel => "external",
"data-role" => "button"
%>

