
<div data-role="page" data-dom-cache="true">
	<div data-role="header" >
		<div class='ui-btn-right' style="font-size: 36px;">
			<a style="color:#FFF;text-decoration:none;" href=<%= current_user ? root_path : app_root_path %>>
				<i class="icon-home icon-large"></i> 
			</a>
		</div>
		<%= image_tag 'gifter_logo_smaller.png'%>
	</div>

	<div id="messages">		
		<% if flash[:alert] %>
		<div class = "alert alert-error" id="alert">
			<ul>
				<li><%= flash[:alert] %></li>
			</ul>
		</div>
		<% end %>
		
		<% if flash[:notice] %>
		<div class = "alert alert-error" id="notice">			
			<ul>
				<li><%= flash[:notice] %></li>
			</ul>
		</div>
		<% end %>		

		<% if defined? @user and not devise_error_messages!.blank? %>
		<div class = "alert alert-error" id="alert">
			<%= devise_error_messages! %>
		</div>
		<%end%>
	</div>

	<div data-role="content">
		<%= yield %>
	</div>

	<div data-role="navbar" data-position="fixed">
		<ul>
			<% if current_user %>
			<li>
				<a href="#" data-rel="back" data-icon="back">Back</a>
			</li>
			<li>
				<%= link_to "Edit Account", edit_user_registration_path, :method => "get", "data-icon" => "gear" %>
			</li>	
			<li>
				<%= link_to "Log Out", destroy_user_session_path, :method => :delete, "data-icon" => "back" %>
			</li>
		
			<% else %>
			<li>
				<a href="#" data-rel="back" data-icon="back">back</a>
			</li>
			<li>
				<%= link_to "Log In", new_user_session_path, "data-icon" => "check" %>
			</li>
			<li>
				<%= link_to "Sign Up", new_user_registration_path, "data-icon" => "plus"%>
			</li>
			<% end %>
		</ul>
	</div>
</div>