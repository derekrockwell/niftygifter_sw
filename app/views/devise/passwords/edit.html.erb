<div id="login">
	
	<% if !devise_error_messages!.empty? %>
	<div class="alert alert-error alert-floating">
		<button type="button" class="close" data-dismiss="alert">×</button>
		<%= devise_error_messages! %>
	</div>
	<% end %>
	<% flash.each do |key, value| %>
	<div class="alert alert-block alert-floating">
		<button type="button" class="close" data-dismiss="alert">×</button>
		<%= content_tag :div, value, :class => "flash #{key}" unless value.blank? %>
	</div>
	<% end %>
	
	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "well well-raised" }) do |f| %>
	<%= f.hidden_field :reset_password_token %>
	
	<legend>Change your password</legend>
	<small class="help-block">Enter your new password and confirm it</small>
	
	<div class="control-group">
		<div><%= f.label :password, :class => "control-label" %>
			<div class="controls">
				<%= f.password_field :password %>
			</div>
		</div>
		<div><%= f.label :password_confirmation, :class => "control-label" %>
			<div class="controls">
				<%= f.password_field :password_confirmation %>
			</div>
		</div>
	</div>

	<div class="form-actions align-center">
		<%= f.submit "Change Password", :class => "btn btn-primary btn-large" %>
	</div>
</fieldset>
<% end %>
</div>
